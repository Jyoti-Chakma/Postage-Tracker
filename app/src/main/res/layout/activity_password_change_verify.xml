<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".PasswordChangeVerify">
    <include
        android:id="@+id/passChangeVerifyToolbar"
        layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="90dp">
            <com.chaos.view.PinView
                android:id="@+id/pinId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                style="@style/PinWidget.PinView"
                app:itemCount="4"
                app:itemHeight="48dp"
                app:itemRadius="5dp"
                app:lineColor="@android:color/darker_gray"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pinError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            android:gravity="center_vertical|center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/error"
                android:layout_marginEnd="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enterCode"
                android:fontFamily="@font/inter_regular"
                android:textSize="14sp"
                android:textColor="#DF1642"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enterToVerify"
            android:textAlignment="center"
            android:fontFamily="@font/oxygen_regular"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:textColor="#212121"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone"
            android:fontFamily="@font/oxygen_regular"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="#212121"/>
        <TextView
            android:id="@+id/resendButton"
            android:clickable="true"
            android:textAlignment="center"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/resendText"
            android:fontFamily="@font/inter_bold"
            android:textColor="#1E90FF"
            android:textSize="16sp"
            android:focusable="true"/>
        <LinearLayout
            android:id="@+id/resendCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            android:gravity="center_vertical|center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/error"
                android:layout_marginEnd="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resend"
                android:fontFamily="@font/inter_regular"
                android:textSize="14sp"
                android:textColor="#DF1642"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="20dp"
        android:gravity="center"
        android:paddingVertical="20dp">
        <Button
            android:id="@+id/passChangeVerify"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="50dp"
            android:layout_height="48dp"
            android:background="@drawable/primary_button"
            android:text="@string/next"
            android:fontFamily="@font/inter_bold"
            android:textColor="#fff"
            android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>