<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".Dashboard">
    <RelativeLayout
        android:id="@+id/newToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addPostage"
            android:src="@drawable/add"
            app:backgroundTint="#1E90FF"
            android:layout_alignParentEnd="true"
            android:layout_margin="30dp"
            tools:ignore="RelativeOverlap" />
        <LinearLayout
            android:id="@+id/newPostToolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:layout_marginHorizontal="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/dashboardIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/person" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/postages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newPostToolbar">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/postages"
                android:fontFamily="@font/inter_bold"
                android:textSize="31sp"
                android:textColor="#212121"
                android:layout_marginStart="20dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_margin="20dp"
            android:layout_below="@+id/postages">
            <SearchView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:queryHint="@string/queryHint"
                android:iconifiedByDefault="false"
                android:focusableInTouchMode="true"
                android:background="@drawable/custom_search"
                />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/currentId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/current"
                        android:fontFamily="@font/oxygen_regular"
                        android:textSize="16sp"
                        android:textColor="#939393" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/current"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <GridLayout
                        android:columnCount="1"
                        android:rowCount="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnOrderPreserved="false"
                        android:alignmentMode="alignMargins">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card1"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            app:cardElevation="3dp"
                            android:clickable="true"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="20dp"
                            android:focusable="true">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <LinearLayout
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_marginHorizontal="20dp">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/car" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/transit"
                                        android:textSize="14sp"
                                        android:textColor="#1E90FF"
                                        android:fontFamily="@font/oxygen_bold" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/item1"
                                        android:textSize="24sp"
                                        android:textColor="#212121"
                                        android:fontFamily="@font/inter_regular" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/item1Sub"
                                        android:textSize="12sp"
                                        android:textColor="#939393"
                                        android:fontFamily="@font/inter_regular" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:text="@string/item1Sub2"
                                        android:textSize="12sp"
                                        android:textColor="#939393"
                                        android:fontFamily="@font/inter_regular" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card2"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            app:cardElevation="3dp"
                            android:clickable="true"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="10dp"
                            android:focusable="true">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <LinearLayout
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_marginHorizontal="20dp">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/pending" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/pending"
                                        android:textSize="14sp"
                                        android:textColor="#FFBB38"
                                        android:fontFamily="@font/oxygen_bold" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/item2"
                                        android:textSize="24sp"
                                        android:textColor="#212121"
                                        android:fontFamily="@font/inter_regular" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/item1Sub"
                                        android:textSize="12sp"
                                        android:textColor="#939393"
                                        android:fontFamily="@font/inter_regular" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:text="@string/item2Sub2"
                                        android:textSize="12sp"
                                        android:textColor="#939393"
                                        android:fontFamily="@font/inter_regular" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </GridLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/pastId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/past"
                        android:fontFamily="@font/oxygen_regular"
                        android:textSize="16sp"
                        android:textColor="#939393" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/pastPostage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <GridLayout
                        android:columnCount="1"
                        android:rowCount="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnOrderPreserved="false"
                        android:alignmentMode="alignMargins">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card3"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            app:cardElevation="3dp"
                            android:clickable="true"
                            android:layout_marginBottom="20dp"
                            android:layout_marginHorizontal="20dp"
                            android:focusable="true">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <LinearLayout
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_marginHorizontal="20dp">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/delivered" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/delivered"
                                        android:textSize="14sp"
                                        android:textColor="#1E90FF"
                                        android:fontFamily="@font/oxygen_bold" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/item3"
                                        android:textSize="24sp"
                                        android:textColor="#212121"
                                        android:fontFamily="@font/inter_regular" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:text="@string/delivery"
                                        android:textSize="12sp"
                                        android:textColor="#939393"
                                        android:fontFamily="@font/inter_regular" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </GridLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>