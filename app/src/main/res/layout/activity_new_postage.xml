<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".NewPostage">
    <RelativeLayout
        android:id="@+id/newPostageToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/newPostageToolbarId"
                layout="@layout/toolbar"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/newPostText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newPostageToolbar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/newPostage"
            android:fontFamily="@font/inter_bold"
            android:textSize="31sp"
            android:textColor="#212121"
            android:layout_marginStart="20dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/locationId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newPostText"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="20">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/current"
                    android:layout_marginTop="12dp" />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:src="@drawable/combined"
                    android:padding="0dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/location" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/locate"
                android:layout_weight="19"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp">
                <EditText
                    android:id="@+id/currentLocation"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/fromLocation"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/custom_edittext"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:layout_marginBottom="24dp" />
                <TextView
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:id="@+id/finalLocation"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textSize="16sp"
                    android:hint="@string/drop"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/custom_edittext"
                    android:focusable="true" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/receipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/locationId"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/receiptInfo"
            android:fontFamily="@font/oxygen_regular"
            android:textSize="16sp"
            android:textColor="#939393"
            android:layout_marginStart="20dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_below="@+id/receipt">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nameText"
                android:fontFamily="@font/inter_bold"
                android:textSize="18sp"
                android:textColor="#212121"
                android:layout_marginBottom="10dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/firstNameHint"
                android:inputType="textPersonName"
                android:background="@drawable/custom_edittext"
                android:paddingHorizontal="10dp"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mobileText"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="20"
                android:background="@drawable/custom_edittext"
                android:orientation="horizontal">
                <com.hbb20.CountryCodePicker
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@drawable/country_code_background"
                    android:gravity="center"
                    app:ccp_defaultNameCode="AU"
                    app:ccp_autoDetectCountry="true"
                    app:ccpDialog_showFlag="false"
                    app:ccpDialog_showCloseIcon="true"
                    app:ccp_showArrow="false"
                    app:ccp_showNameCode="false"
                    app:ccp_textSize="18sp"
                    app:ccp_showFlag="false" />
                <EditText
                    android:id="@+id/phoneNumber"
                    android:layout_weight="15"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:background="@drawable/custom_edittext"
                    android:inputType="phone"
                    android:textSize="18sp"
                    android:paddingHorizontal="10dp"
                    android:hint="@string/mobileNumber"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="20dp"
        android:paddingVertical="20dp">
        <Button
            android:id="@+id/newPostageSubmit"
            android:layout_width="291dp"
            android:layout_height="48dp"
            android:background="@drawable/primary_button"
            android:text="@string/submit"
            android:fontFamily="@font/inter_bold"
            android:textColor="#fff"
            android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>